.grade {
	@apply text-red-400;
	@apply shadow;
}

.grade.grade-sh,
.grade.grade-xh {
	@apply text-gray-300;
}

.grade.grade-s,
.grade.grade-x {
	@apply text-yellow-500;
}

.grade.grade-a {
	@apply text-green-500;
}

.grade.grade-b {
	@apply text-blue-600;
}

.grade.grade-c {
	@apply text-purple-500;
}

.userpage a {
	display: inline-block !important; /* NOTE: For centering images in userpage */
}
